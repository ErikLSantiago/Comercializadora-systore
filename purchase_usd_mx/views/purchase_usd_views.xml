<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inline list for the USD tab -->
    <record id="view_purchase_order_form_usd_mx" model="ir.ui.view">
        <field name="name">purchase.order.form.usd.mx</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="USD">
                    <group col="2">
                        <field name="usd_mx_rate"/>
                        <field name="amount_total_usd" readonly="1"/>
                    </group>
                    <field name="order_line" nolabel="1" options="{'no_create': True, 'no_edit': True}">
                        <list create="0" edit="0" delete="0">
                            <field name="name" string="DescripciÃ³n"/>
                            <field name="product_qty" string="Cantidad"/>
                            <field name="price_unit" string="Precio unitario"/>
                            <field name="price_unit_usd" string="Precio USD"/>
                            <field name="total_usd" string="Total USD"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>