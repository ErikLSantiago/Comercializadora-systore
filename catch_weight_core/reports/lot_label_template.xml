<odoo>
  <template id="lot_label_template">
    <t t-call="web.external_layout">
      <t t-foreach="docs" t-as="lot">
        <div style="page-break-after: always;">
          <h3 t-esc="lot.product_id.display_name"/>
          <p><strong>Lote:</strong> <span t-esc="lot.name"/></p>
          <p t-if="lot.x_weight_g"><strong>Peso:</strong> <span t-esc="lot.x_weight_g"/> g</p>
          <p t-if="lot.expiration_date"><strong>Caducidad:</strong> <span t-esc="lot.expiration_date"/></p>
          <div style="margin-top: 10px;">
            <span>Barcode (Code128):</span>
            <div class="barcode">
              <t t-set="barcode_value" t-value="lot.name"/>
              <img t-att-src="'/report/barcode/Code128/%s?width=600&height=120&humanreadable=1' % barcode_value"/>
            </div>
          </div>
        </div>
      </t>
    </t>
  </template>
</odoo>
