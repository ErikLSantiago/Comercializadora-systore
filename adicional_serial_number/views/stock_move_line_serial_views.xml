<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_stock_move_line_serial_list" model="ir.ui.view">
      <field name="name">stock.move.line.serial.list</field>
      <field name="model">stock.move.line.serial</field>
      <field name="arch" type="xml">
        <list string="Seriales capturados (adicional)" create="false">
          <field name="name"/>
          <field name="product_id"/>
          <field name="lot_id"/>
          <field name="picking_id"/>
          <field name="partner_id"/>
          <field name="origin"/>
          <field name="carrier_tracking_ref"/>
          <field name="date"/>
          <field name="move_line_id"/>
          <field name="company_id"/>
        </list>
      </field>
    </record>

    <record id="view_stock_move_line_serial_form" model="ir.ui.view">
      <field name="name">stock.move.line.serial.form</field>
      <field name="model">stock.move.line.serial</field>
      <field name="arch" type="xml">
        <form string="Serial capturado (adicional)">
          <sheet>
            <group>
              <field name="name"/>
              <field name="move_line_id"/>
              <field name="product_id" readonly="1"/>
              <field name="lot_id" readonly="1"/>
              <field name="picking_id" readonly="1"/>
              <field name="partner_id" readonly="1"/>
              <field name="origin" readonly="1"/>
              <field name="carrier_tracking_ref" readonly="1"/>
              <field name="date" readonly="1"/>
              <field name="company_id" readonly="1"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_stock_move_line_serial_list_editable" model="ir.ui.view">
      <field name="name">stock.move.line.serial.list.editable</field>
      <field name="model">stock.move.line.serial</field>
      <field name="arch" type="xml">
        <list string="Seriales capturados (adicional)" editable="bottom" create="false">
          <field name="name"/>
          <field name="product_id" readonly="1"/>
          <field name="lot_id" readonly="1"/>
          <field name="picking_id" readonly="1"/>
          <field name="move_line_id" readonly="1"/>
          <field name="partner_id" readonly="1"/>
          <field name="origin" readonly="1"/>
          <field name="carrier_tracking_ref" readonly="1"/>
          <field name="date" readonly="1"/>
          <field name="company_id" readonly="1"/>
        </list>
      </field>
    </record>

    <record id="action_serial_history_by_picking" model="ir.actions.act_window">
      <field name="name">Historial de seriales (edici√≥n)</field>
      <field name="res_model">stock.move.line.serial</field>
      <field name="view_mode">list,form</field>
      <field name="view_id" ref="view_stock_move_line_serial_list_editable"/>
      <field name="domain">[('picking_id', '=', active_id)]</field>
      <field name="context">{}</field>
    </record>
  </data>
</odoo>
