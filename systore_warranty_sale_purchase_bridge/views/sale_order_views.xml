<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form_warranty_bridge" model="ir.ui.view">
        <field name="name">sale.order.form.warranty.bridge</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Botón para crear OC de garantía en Scrap Systore -->
            <xpath expr="//header" position="inside">
                <button
                    name="action_create_warranty_purchase_scrap"
                    type="object"
                    string="Crear OC Garantía (Scrap)"
                    class="btn-secondary"/>
            </xpath>

            <!-- Pestaña de tickets de garantía ligados a la OV -->
            <xpath expr="//notebook" position="inside">
                <page string="Garantías" name="warranty_tickets_page">
                    <field name="warranty_ticket_ids" readonly="1">
                        <list>
                            <field name="name"/>
                            <field name="create_date"/>
                            <field name="stage_id"/>
                            <field name="partner_id"/>
                        </list>
                    </field>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
