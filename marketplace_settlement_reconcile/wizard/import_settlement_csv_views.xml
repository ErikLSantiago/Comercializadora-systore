<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_import_settlement_csv_form" model="ir.ui.view">
        <field name="name">marketplace.settlement.import.csv.form</field>
        <field name="model">marketplace.settlement.import.csv</field>
        <field name="arch" type="xml">
            <form string="Import Settlement CSV">
                <group>
                    <field name="settlement_id" invisible="1"/>
                    <field name="filename" invisible="1"/>
                    <field name="csv_file" filename="filename"/>
                </group>
                <footer>
                    <button name="action_import" type="object" string="Import" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_import_settlement_csv" model="ir.actions.act_window">
        <field name="name">Import Settlement CSV</field>
        <field name="res_model">marketplace.settlement.import.csv</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_settlement_id': active_id}</field>
    </record>
</odoo>
