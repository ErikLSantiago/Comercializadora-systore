<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_mkp_settlement" model="ir.ui.view">
        <field name="name">res.config.settings.mkp.settlement</field>
        <field name="model">res.config.settings</field>
        <!-- Use base settings form for maximum compatibility across Odoo 18 builds -->
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Marketplace Settlement" string="Marketplace Settlement">
                    <h2>Marketplace Settlement</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="mkp_clearing_account_id"/>
                                <div class="text-muted">
                                    Account used as clearing to match net deposits from marketplaces.
                                </div>
                                <field name="mkp_clearing_account_id"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="mkp_settlement_journal_id"/>
                                <div class="text-muted">
                                    General journal used to post settlement entries.
                                </div>
                                <field name="mkp_settlement_journal_id"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
