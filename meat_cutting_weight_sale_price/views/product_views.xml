<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_weight_price" model="ir.ui.view">
        <field name="name">product.template.form.meat_cutting.weight.price</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="inside">
                <group string="Precio por peso (Despiece)" col="4">
                    <field name="x_use_weight_sale_price"/>
                    <field name="x_price_per_weight" invisible="not x_use_weight_sale_price"/>
                    <field name="x_price_weight_uom_id" invisible="not x_use_weight_sale_price"/>
                    <div class="o_form_label">El precio se recalcula al reservar seriales en la entrega.</div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
