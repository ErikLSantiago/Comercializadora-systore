<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form_mc_weight_price" model="ir.ui.view">
        <field name="name">product.template.form.mc.weight.price</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Precio por peso">
                    <field name="x_use_weight_sale_price"/>
                    <field name="x_price_per_weight" invisible="not x_use_weight_sale_price"/>
                    <field name="x_price_weight_uom_id" invisible="not x_use_weight_sale_price"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
