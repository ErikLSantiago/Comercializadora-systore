<odoo>
  <record id="view_mrp_production_form_cw_hint" model="ir.ui.view">
    <field name="name">mrp.production.form.catch.weight.hint</field>
    <field name="model">mrp.production</field>
    <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//button[@name='button_mark_done']" position="after">
        <button name="button_mark_done" type="object" string="Finalizar (CW)" class="btn-primary"
                attrs="{'invisible':[('product_id.product_tmpl_id.x_is_catch_weight','=',False)]}"/>
      </xpath>
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Catch Weight" attrs="{'invisible':[('product_id.product_tmpl_id.x_is_catch_weight','=',False)]}">
          <group>
            <label string="Al finalizar, se abrirÃ¡ un asistente para capturar pesos, merma y calcular costos por peso."/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
