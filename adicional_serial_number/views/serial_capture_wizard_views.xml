
<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="serial_capture_wizard_form" model="ir.ui.view">
      <field name="name">serial.capture.wizard.form</field>
      <field name="model">serial.capture.wizard</field>
      <field name="arch" type="xml">
        <form string="Capturar números de serie (producto)">
          <group>
            <field name="picking_id" readonly="1"/>
            <field name="product_id"/>
          </group>
          <group>
            <field name="demand_qty" readonly="1"/>
            <field name="reserved_qty" readonly="1"/>
          </group>
          <group>
            <field name="existing_serials_info" readonly="1" placeholder="Aún no hay seriales capturados para este producto."/>
          </group>
          <group>
            <field name="input_serials_text" placeholder="Pegue aquí los seriales, uno por línea..."/>
          </group>
          <footer>
            <button string="Guardar" type="object" name="action_apply" class="btn-primary"/>
            <button string="Cancelar" special="cancel"/>
          </footer>
        </form>
      </field>
    </record>
  </data>
</odoo>
