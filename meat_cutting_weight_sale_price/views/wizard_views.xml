<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mc_weight_price_wizard_form" model="ir.ui.view">
        <field name="name">mc.weight.price.wizard.form</field>
        <field name="model">mc.weight.price.wizard</field>
        <field name="arch" type="xml">
            <form string="Asignar seriales y recalcular">
                <group>
                    <field name="sale_order_id" readonly="1"/>
                    <field name="line_id" required="1"/>
                </group>
                <group>
                    <field name="price_per_weight" readonly="1"/>
                    <field name="price_weight_uom_id" readonly="1"/>
                </group>
                <group>
                    <field name="lot_ids" widget="many2many_tags" options="{'no_create': True}" required="1"/>
                </group>
                <footer>
                    <button string="Aplicar" type="object" name="action_apply" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
