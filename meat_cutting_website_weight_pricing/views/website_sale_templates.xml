<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Payment page: inject a small lot summary block (JS will move it into the order summary sidebar) -->
  <template id="mc_web_checkout_summary_lot" inherit_id="website_sale.payment" name="MC Web: Checkout Summary Lot (Payment)">
    <xpath expr="." position="inside">
      <t t-set="mc_order" t-value="website_sale_order or sale_order or order"/>
      <t t-if="mc_order and mc_order.order_line.filtered(lambda l: l.mc_web_lot_display)">
        <div id="mc_web_lot_block" class="d-none">
          <div class="fw-bold mb-1">Unidad de peso asignada</div>
          <ul class="list-unstyled mb-0 small">
            <t t-foreach="mc_order.order_line.filtered(lambda l: l.mc_web_lot_display)" t-as="l">
              <li>
                <span t-esc="l.product_id.display_name"/>:
                <span t-esc="l.mc_web_lot_display"/>
              </li>
            </t>
          </ul>
        </div>
      </t>
    </xpath>
  </template>
</odoo>
