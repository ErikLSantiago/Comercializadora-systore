<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_marketplace_fees" model="ir.ui.view">
        <field name="name">product.template.form.marketplace.fees</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page name="marketplace_fees" string="Marketplace Comisiones" groups="base.group_user">
                    <group>
                        <field name="marketplace_fee_config_ids" mode="list,form" groups="base.group_user"
                               context="{'default_product_tmpl_id': id,
                                         'list_view_ref': 'marketplace_fees.product_marketplace_fee_config_list',
                                         'form_view_ref': 'marketplace_fees.product_marketplace_fee_config_form'}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
