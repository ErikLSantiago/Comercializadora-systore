<template id="warranty_portal_ticket_update_address"
          inherit_id="helpdesk.tickets_followup"
          name="Botón actualizar guía en ticket portal">
    <xpath expr="//div[@id='card_header']" position="after">
        <t t-if="ticket and ticket.is_warranty and ticket.stage_id and ticket.stage_id.name == 'Solicitud guia'">
            <div class="container mt-3 mb-3">
                <a t-att-href="'/garantias/actualizar-guia/%s' % ticket.id"
                   class="btn btn-primary">
                    Datos para la generación de guía
                </a>
            </div>
        </t>
    </xpath>
</template>

