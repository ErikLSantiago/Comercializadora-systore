                        <group>
                            <field name="amount_subtotal_sin_iva" readonly="1"/>
                            <field name="amount_tax_sin_iva" readonly="1"/>
                            <field name="amount_total_sin_iva" readonly="1"/>
                        </group>
                    </group>
