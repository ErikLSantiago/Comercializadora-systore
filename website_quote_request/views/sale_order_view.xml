<odoo>
  <record id="view_sale_order_form_wqr_pieces" model="ir.ui.view">
    <field name="name">sale.order.form.wqr.pieces</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header//div[contains(@class,'oe_button_box')]" position="inside">
        <button type="object" name="action_view_order_lines" class="oe_stat_button" icon="fa-cubes" 
                attrs="{'invisible': [('wqr_total_pieces','=',0)]}">
          <field name="wqr_total_pieces" widget="statinfo" string="Piezas"/>
        </button>
      </xpath>
    </field>
  </record>
</odoo>
