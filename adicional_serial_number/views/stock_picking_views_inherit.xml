<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_picking_form_inherit_adicional_sn" model="ir.ui.view">
      <field name="name">stock.picking.form.inherit.adicional.sn</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <xpath expr="//sheet//div[@class='oe_button_box']" position="inside">
          <button name="action_open_serial_lines_list"
                  type="object"
                  class="oe_stat_button"
                  icon="fa-barcode">
            <div class="o_stat_info">
              <span class="o_stat_value"><field name="serial_captured_count"/></span>
              <span class="o_stat_text">Seriales (adicional)</span>
            </div>
          </button>
            
<button name="action_open_serial_captured_list"
        type="object"
        class="oe_stat_button btn-success"
        icon="fa-list-ol"
        invisible="not id or serial_captured_count == 0 or serial_captured_count != serial_demand_total">
  <div class="o_stat_info">
    <span class="o_stat_value"><field name="serial_captured_count"/></span>
    <span class="o_stat_text">Seriales capturados</span>
  </div>
</button>
<button name="action_open_serial_captured_list"
        type="object"
        class="oe_stat_button btn-warning"
        icon="fa-list-ol"
        invisible="not id or serial_captured_count == 0 or serial_captured_count == serial_demand_total">
  <div class="o_stat_info">
    <span class="o_stat_value"><field name="serial_captured_count"/></span>
    <span class="o_stat_text">Seriales capturados</span>
  </div>
</button>
<button name="action_open_serial_captured_list"
        type="object"
        class="oe_stat_button btn-secondary"
        icon="fa-list-ol"
        invisible="not id or serial_captured_count != 0">
  <div class="o_stat_info">
    <span class="o_stat_value">0</span>
    <span class="o_stat_text">Seriales capturados</span>
  </div>
</button>

  </xpath>

      </field>
    </record>
  </data>
</odoo>
