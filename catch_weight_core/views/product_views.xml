<odoo>
  <record id="view_product_template_form_cw" model="ir.ui.view">
    <field name="name">product.template.form.catch.weight</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='inventory']/group" position="inside">
        <group string="Catch Weight">
          <field name="x_is_catch_weight"/>
          <field name="x_is_waste"/>
          <field name="x_shelf_life_days" invisible="not x_is_catch_weight"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
