<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_picking_form_inherit_adicional_sn" model="ir.ui.view">
      <field name="name">stock.picking.form.inherit.adicional.sn</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">

          <!-- COMPLETO (VERDE) -->
          <button name="adicional_serial_number.action_serial_captured_list"
                  type="action"
                  class="oe_stat_button btn-success"
                  icon="fa-list-ol"
                  invisible="not id or not serial_complete">
            <div class="o_stat_info">
              <span class="o_stat_value">
                <field name="serial_captured_count"/>
                <span>/</span>
                <field name="serial_expected_qty"/>
              </span>
              <span class="o_stat_text">Seriales capturados</span>
            </div>
          </button>

          <!-- PARCIAL (AMARILLO) -->
          <button name="adicional_serial_number.action_serial_captured_list"
                  type="action"
                  class="oe_stat_button btn-warning"
                  icon="fa-list-ol"
                  invisible="not id or not serial_partial">
            <div class="o_stat_info">
              <span class="o_stat_value">
                <field name="serial_captured_count"/>
                <span>/</span>
                <field name="serial_expected_qty"/>
              </span>
              <span class="o_stat_text">Seriales capturados</span>
            </div>
          </button>

          <!-- SIN CAPTURA (GRIS) -->
          <button name="adicional_serial_number.action_serial_captured_list"
                  type="action"
                  class="oe_stat_button btn-secondary"
                  icon="fa-list-ol"
                  invisible="not id or not serial_none">
            <div class="o_stat_info">
              <span class="o_stat_value">
                <field name="serial_captured_count"/>
                <span>/</span>
                <field name="serial_expected_qty"/>
              </span>
              <span class="o_stat_text">Seriales capturados</span>
            </div>
          </button>

        </xpath>
      </field>
    </record>
  </data>
</odoo>
