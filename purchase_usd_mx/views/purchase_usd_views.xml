          <page name="usd_tab" string="USD">
            <group>
              <field name="usd_mx"/>
            </group>
            <field name="order_line" options="{'no_create': True, 'no_edit': True}">
              <tree>
                <field name="name" string="DescripciÃ³n"/>
                <field name="product_qty" string="Cantidad"/>
                <field name="price_unit" string="Precio unitario"/>
                <field name="price_unit_usd"/>
                <field name="price_total_usd"/>
              </tree>
            </field>
            <group>
              <field name="amount_total_usd" readonly="1"/>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
