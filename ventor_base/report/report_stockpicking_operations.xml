<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_picking" inherit_id="stock.report_picking">

        <xpath expr="//div[@name='div_outgoing_address']" position="attributes">
            <attribute name="class">col-5</attribute>
        </xpath>

        <xpath expr="//div[@name='div_incoming_address']" position="attributes">
            <attribute name="class">col-4</attribute>
        </xpath>

        <xpath expr="//div[@name='div_incoming_address']" position="after">
            <div t-if="o.sale_id.name and o.company_id.barcode_on_picking_document" class="col-3"  style="text-align: right" name="left_box">
                <div t-field="o.sale_id.name"
                     t-options="{'widget': 'barcode', 'humanreadable': 1, 'width': 600, 'height': 100, 'img_style': 'width:300px;height:50px;'}"/>
            </div>
        </xpath>

    </template>

</odoo>
