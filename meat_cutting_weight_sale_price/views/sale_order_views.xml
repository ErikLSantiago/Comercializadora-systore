<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_form_mc_weight_button" model="ir.ui.view">
        <field name="name">sale.order.form.mc.weight.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    string="Asignar seriales y recalcular"
                    type="object"
                    name="action_open_weight_price_wizard"
                    class="btn-secondary"
                    invisible="state not in ('draft','sent','sale')"
                />
            </xpath>
        </field>
    </record>
</odoo>
