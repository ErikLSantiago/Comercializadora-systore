<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Acción para ver solo plantillas de stock.picking -->
    <record id="action_mail_template_picking" model="ir.actions.act_window">
        <field name="name">Plantillas de correo (Operaciones)</field>
        <field name="res_model">mail.template</field>
        <field name="view_mode">tree,form"/>
        <field name="domain">[('model_id.model','=','stock.picking')]</field>
        <field name="context">{'search_default_stock_picking': 1}</field>
        <field name="help" type="html">
            <p>Administra las plantillas de correo usadas para las operaciones de almacén.</p>
        </field>
    </record>

    <!-- Menú en Inventario > Configuración -->
    <menuitem id="menu_config_email_templates_picking"
              name="Plantillas de correo"
              parent="stock.menu_stock_config_settings"
              action="action_mail_template_picking"
              sequence="60"/>
</odoo>