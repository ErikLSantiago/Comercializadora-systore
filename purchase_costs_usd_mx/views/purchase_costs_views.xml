<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Inherit Purchase Order form: add page and totals -->
        <record id="view_purchase_order_form_usd_mx_costs" model="ir.ui.view">
            <field name="name">purchase.order.form.usd_mx_costs</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Desglose USD">
                        <group>
                            <group>
                                <field name="usd_mx"/>
                            </group>
                        </group>

                        <!-- Custom list for order lines -->
                        <field name="order_line" mode="list" context="{'list_view_ref': 'purchase_costs_usd_mx.purchase_order_line_list_usd_mx'}"/>

                        <!-- Subtotals -->
                        <group col="4" class="oe_subtotal_footer">
                            <span/>
                            <span class="o_form_label">Subtotal Total USD</span>
                            <field name="subtotal_total_usd" readonly="1"/>
                            <span/>

                            <span/>
                            <span class="o_form_label">Líneas Total MX (USD→MX)</span>
                            <field name="subtotal_lines_usd_mx" readonly="1"/>
                            <span/>

                            <span/>
                            <span class="o_form_label">Envío Total MX</span>
                            <field name="subtotal_shipping_mx" readonly="1"/>
                            <span/>

                            <span/>
                            <span class="o_form_label">Importación Total MX</span>
                            <field name="subtotal_import_mx" readonly="1"/>
                            <span/>

                            <span/>
                            <span class="o_form_label">Total MX</span>
                            <field name="subtotal_grand_total_mx" readonly="1"/>
                            <span/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- List view for Purchase Order Lines -->
        <record id="purchase_order_line_list_usd_mx" model="ir.ui.view">
            <field name="name">purchase.order.line.list.usd.mx</field>
            <field name="model">purchase.order.line</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="display_name" readonly="1"/>
                    <field name="product_qty"/>
                    <field name="price_unit_usd"/>
                    <field name="total_usd" readonly="1"/>
                    <field name="total_usd_mx" readonly="1"/>
                    <field name="shipping_cost_usd"/>
                    <field name="shipping_total_mx" readonly="1"/>
                    <field name="import_cost_mx"/>
                    <field name="import_total_mx" readonly="1"/>
                </list>
            </field>
        </record>
    </data>
</odoo>
