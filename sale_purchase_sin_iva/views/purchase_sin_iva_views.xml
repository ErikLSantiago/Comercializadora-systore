
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List view for purchase order lines with Sin IVA columns -->
    <record id="purchase_order_line_list_sin_iva" model="ir.ui.view">
        <field name="name">purchase.order.line.list.sin.iva</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="DescripciÃ³n"/>
                <field name="product_qty" string="Cantidad"/>
                <field name="product_uom" string="UoM"/>
                <field name="sin_iva_price_unit" string="Sin IVA (unit.)"/>
                <field name="sin_iva_price_subtotal" string="Total sin IVA"/>
            </list>
        </field>
    </record>

    <!-- Add new "Sin IVA" page in purchase.order form -->
    <record id="view_purchase_form_sin_iva" model="ir.ui.view">
        <field name="name">purchase.order.form.sin.iva.page</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Sin IVA" name="sin_iva_page">
                    <field name="order_line" nolabel="1"
                           options="{'no_create': True, 'no_edit': True}"
                           context="{'tree_view_ref': 'sale_purchase_sin_iva.purchase_order_line_list_sin_iva',
                                     'list_view_ref': 'sale_purchase_sin_iva.purchase_order_line_list_sin_iva'}"/>
                    <group>
                        <group>
                            <field name="amount_untaxed_sin_iva" readonly="1"/>
                            <field name="amount_tax_sin_iva" readonly="1"/>
                            <field name="amount_total_sin_iva" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
