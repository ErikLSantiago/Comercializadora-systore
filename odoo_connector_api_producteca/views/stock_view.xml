<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_location_form_producteca">
            <field name="name">stock.location.producteca</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
              <xpath expr="//group[1]" position="inside">
                  <group string="Inventario Producteca" name="producteca_stock_location"  col="2">
                      <field name="producteca_logistic_type" invisible="0"/>
                  </group>
               </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_warehouse_form_producteca">
            <field name="name">stock.warehouse.producteca</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
              <xpath expr="//group[1]" position="inside">
                  <group string="Inventario Producteca" name="producteca_stock_warehouse"  col="2">
                      <field name="producteca_logistic_type" invisible="0"/>
                  </group>
               </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="view_stock_picking_form_producteca">
            <field name="name">stock.picking.form.producteca</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
              <xpath expr="//group[1]" position="inside">
                  <group string="Producteca" name="producteca_stock_picking"
                    col="2">
                  <!--group string="Producteca" name="producteca_stock_picking"
                      invisible="sale_order.producteca_binding == False"
                      col="2"-->
                    <button name='producteca_print' type="object"
                      string="Imprimir guia"
                      class="oe_stat_button"
                      icon="fa-print"/>
                      <field name="producteca_shippingLink_attachment" invisible="0"/>
                  </group>
               </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="view_producteca_filter_rule_tree">
          <field name="name">producteca.filter.rule.tree</field>
          <field name="model">producteca.filter.rule</field>
          <field name="arch" type="xml">
            <list create="1" edit="1" delete="1" default_order='id desc'>
              <field name="name" />
              <field name="filtering_type" />
              <field name="filtering_text" />
              <field name="filtering_method" />
              <field name="filtering_case_sensitive" />
            </list>
          </field>
        </record>

        <record id="producteca_filter_rule_search_view" model="ir.ui.view">
    			<field name="name">Producteca Filtros - Search</field>
    			<field name="model">producteca.filter.rule</field>
    			<field name="arch" type="xml">
    				<search  string="Search Producteca Filtros Information">
    					<field name="name" />
    					<field name="filtering_text" />
    					<field name="filtering_type" />
    					<field name="filtering_method" />
    				</search>
    			</field>
    		</record>

        <record model="ir.actions.act_window" id="action_producteca_filter_rule_tree">
    			<field name="name">Filtros</field>
    			<field name="type">ir.actions.act_window</field>
    			<field name="res_model">producteca.filter.rule</field>
    			<field name="view_mode">list,form</field>
    			<field name="search_view_id" ref="producteca_filter_rule_search_view" />
    		</record>

        <menuitem id="menu_producteca_connectors" name="Producteca" parent="sale.sale_menu_root" sequence="16"
            groups="odoo_connector_api_producteca.group_producteca_connectors_manager" />

          <menuitem id="menu_producteca_filter_rule"
            action="action_producteca_filter_rule_tree"
            parent="menu_producteca_connectors"
            name="Filtros"  sequence="100"/>

    </data>
</odoo>
