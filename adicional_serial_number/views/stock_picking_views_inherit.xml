
<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record id="view_picking_form_inherit_adicional_sn" model="ir.ui.view">
      <field name="name">stock.picking.form.inherit.adicional.sn</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
          <!-- BotÃ³n para capturar por producto (abre wizard) -->
          <button name="adicional_serial_number.action_open_serial_capture_wizard"
                  type="action"
                  class="oe_stat_button"
                  icon="fa-cubes"
                  invisible="not id or state == 'done'">
            <div class="o_stat_info">
              <span class="o_stat_text">Seriales (producto)</span>
            </div>
          </button>

          <!-- Smart button neutro para ver seriales capturados -->
          <button name="adicional_serial_number.action_serial_captured_list"
                  type="action"
                  class="oe_stat_button"
                  icon="fa-list-ol"
                  invisible="not id or serial_captured_count == 0">
            <div class="o_stat_info">
              <span class="o_stat_value"><field name="serial_captured_count"/></span>
              <span class="o_stat_text">Seriales capturados</span>
            </div>
          </button>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
