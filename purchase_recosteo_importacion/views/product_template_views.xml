<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_import_cost" model="ir.ui.view">
        <field name="name">product.template.form.import.cost</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Insert just below Product Category (categ_id) -->
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="x_import_fixed_mxn"/>
            </xpath>
        </field>
    </record>
</odoo>
