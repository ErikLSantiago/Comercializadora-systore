<odoo>
    <record id="view_helpdesk_ticket_form_warranty" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.warranty</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Garantía">
                    <group>
                        <field name="is_warranty"/>
                        <field name="sale_order_id"/>
                        <field name="product_reported_id"/>
                    </group>
                    <group>
                        <button name="action_update_ticket_name"
                                type="object"
                                string="Actualizar ticket"
                                class="btn-primary"/>
                    </group>
                    <group string="Datos cuando no encontró la orden" col="4">
                        <field name="no_order_found" colspan="4"/>
                        <group col="2" colspan="4">
                            <field name="manual_order_number"/>
                            <field name="manual_product_description"/>
                        </group>
                    </group>
                    <group string="Contacto y falla">
                        <field name="warranty_phone"/>
                        <field name="warranty_imei"/>
                        <field name="failure_type"/>
                        <field name="failure_type_other"/>
                        <field name="failure_description"/>
                    </group>
                    <group string="Domicilio de retorno">
                        <field name="warranty_state"/>
                        <field name="warranty_city"/>
                        <field name="warranty_district"/>
                        <field name="warranty_zip"/>
                        <field name="warranty_street"/>
                        <field name="warranty_street_number"/>
                        <field name="warranty_references"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_helpdesk_ticket_form_warranty_header" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.warranty.header</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group>
                    <group>
                        <field name="x_studio_canal_de_venta_1" string="Canal de venta"/>
                        <field name="x_studio_nmero_de_orden_mkp" string="Orden de venta"/>
                        <field name="x_studio_fecha_orden_producteca" string="Fecha de venta"/>
                    </group>
                    <group>
                        <field name="warranty_tracking_number"/>
                        <field name="warranty_carrier_name"/>
                        <field name="warranty_account_number"/>
                        <field name="warranty_attachments" filename="warranty_attachments_filename"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
